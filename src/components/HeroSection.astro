---

import Box from "./Box.astro";
---
<header class="flex p-3 top-0 sticky">
  <div class="mr-auto ml-3">
    <img src="/assets/logo.png" class="w-[100px]" alt="">
  </div>
  <nav class="ml-auto mr-5">
    <img src="/assets/Menu.png" class="w-[50px] " id='menu' alt="">
  </nav>
  <div class=" hidden bg-white h-[95vh] w-[70vw] sm:w-[25vw] right-[100px] rounded" id="drawer" >
    <Box name="Cards" link="card"/>
    <Box name="Navigation" link="navigation"/>
    <Box name="Table" link="table"/>
    <Box name="Pricing Section" link="pricingsection"/>
    <Box name="Newsletter" link="newsletter"/>
    <Box name="Footer" link="footer"/>
    <Box name="Sidebar" link="sidebar"/>

  </div>
</header>
<div class="grid place-content-center h-[100vh] gap-20">
  <div class="md:w-[95vw] sm:w-[80vw] w-[90vw] text-center">
    <h1 class="md:text-[100px] text-[40px]  text-[#E2EDF0]">TailwindCSS Components Library</h1>
  </div>
   <a href="/allcomponents">
     <div class="flex justify-center items-center m-auto bg-white gap-4 ring ring-black sm:w-[520px] w-[350px] p-4 rounded-2xl ">
       <div>
         <p class="text-[16px] sm:text-2xl">View All Components</p>
       </div>
       <div>
         <img src="/assets/Vector.png" class="w-[30px] sm:w-[50px]" alt=""/>
       </div>
     </div>
   </a>
</div>
<script>
  let state = '';
  const menubar = document.querySelector('#menu');
  menubar.addEventListener('click',()=>{
    let drawer = document.getElementById('drawer');
    if(state==''){
      drawer.classList.remove('hidden');
      drawer.classList.add('flex')
      drawer.classList.add('flex-col')
      drawer.classList.add('absolute')

      state='open';
    }else
    if(state=='open'){
      drawer.classList.remove('flex')
      drawer.classList.remove('flex-col')
      drawer.classList.remove('absolute')
      drawer.classList.add('hidden');
      state='';
    }
    alert(drawer.classList);

  })
</script>